<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="kg.obval.ov.Tablo">


    <Button
        android:id="@+id/proobmen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:text="Произвести\nобмен"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="@+id/gridLayout"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.834" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp">

    </LinearLayout>


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="179dp"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:columnCount="3"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="-1dp">

        <TextView
            android:id="@+id/valutaText"
            android:layout_width="100dp"
            android:layout_height="@dimen/height"
            android:layout_column="0"
            android:layout_row="5"
            android:text="Валюта"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/pokupkaText"
            android:layout_width="100dp"
            android:layout_height="@dimen/height"
            android:text="Покупка"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/prodajaText"
            android:layout_width="100dp"
            android:layout_height="@dimen/height"
            android:text="Продажа"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:src="@drawable/usa" />

            <TextView
                android:id="@+id/dollarText"
                android:layout_width="80dp"
                android:layout_height="@dimen/height"
                android:text="USD"
                android:textAlignment="center"
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/dollarPokupkaText"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/dollarProdazhaText"
            android:layout_width="100dp"
            android:layout_height="@dimen/height"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:src="@drawable/europe" />

            <TextView
                android:id="@+id/euroText"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:text="EUR"
                android:textAlignment="center"
                android:textColor="@color/black" />

        </LinearLayout>


        <TextView
            android:id="@+id/euroPokupkaText"
            android:layout_width="100dp"
            android:layout_height="@dimen/height"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/euroProdazhaText"
            android:layout_width="100dp"
            android:layout_height="@dimen/height"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/rubButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:src="@drawable/russia"/>
            <TextView
                android:id="@+id/rublText"
                android:layout_width="80dp"
                android:layout_height="@dimen/height"
                android:text="RUB"
                android:textAlignment="center"
                android:textColor="@color/black" />
        </LinearLayout>


        <TextView
            android:id="@+id/rublPokupkaText"
            android:layout_width="100dp"
            android:layout_height="@dimen/height"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/rublProdajaText"
            android:layout_width="100dp"
            android:layout_height="@dimen/height"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:src="@drawable/kazahstan"/>
            <TextView
                android:id="@+id/tengeText"
                android:layout_width="80dp"
                android:layout_height="@dimen/height"
                android:text="KZT"
                android:textAlignment="center"
                android:textColor="@color/black"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tengePokupkaText"
            android:layout_width="100dp"
            android:layout_height="@dimen/height"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tengeProdazhaText"
            android:layout_width="100dp"
            android:layout_height="@dimen/height"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black" />


    </GridLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="368dp"
        android:layout_height="40dp"
        android:layout_marginTop="38dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        tools:layout_editor_absoluteX="8dp">

        <EditText
            android:id="@+id/kolsummaedit"
            android:layout_width="128dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="numberDecimal" />

        <Spinner
            android:id="@+id/spinnervalutado"
            android:layout_width="65dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/naView"
            android:layout_width="41dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="на" />

        <Spinner
            android:id="@+id/spinnervalutaposle"
            android:layout_width="65dp"
            android:layout_height="40dp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:src="@drawable/whatsapp2"
        android:id="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:layout_marginRight="-1dp"
        android:text="Связаться  по номеру: \n 0700 800 000 или "
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/proobmen"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Конвертер валют"
        android:textColor="@color/blue"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <LinearLayout
        android:id="@+id/gridLayout2"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:layout_editor_absoluteX="13dp">


        <Spinner
            android:id="@+id/kupitprodat"
            android:layout_width="95dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/resultatView"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Формула:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/summaView"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="Сумма"
            android:textColor="@color/black"
            android:textSize="12sp" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
